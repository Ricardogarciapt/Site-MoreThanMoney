{
  "buildCommand": "npm run build-force",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/admin-dashboard/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/admin-dashboard/:path*",
      "destination": "/admin-dashboard/:path*"
    }
  ]
}
